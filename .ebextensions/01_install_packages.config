container_commands:
  01-install-packages:
    command: "composer.phar install"
    cwd: "/var/app/ondeck/api"
    ignoreErrors: false
    leader_only: true
    env:
      COMPOSER_HOME: /var/app/ondeck/api
  02-install-yarn:
    command: "yarn install"
    cwd: "/var/app/ondeck/frontend"
    ignoreErrors: false
    leader_only: true